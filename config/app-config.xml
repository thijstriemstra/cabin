<flex-config>
    <!-- benchmark: output performance benchmark-->
    <benchmark>true</benchmark>

    <compiler>
        <!-- compiler.debug: generates a movie that is suitable for debugging-->
        <debug>false</debug>
        
        <optimize>true</optimize>

		<omit-trace-statements>true</omit-trace-statements>
		
        <!-- compiler.show-actionscript-warnings: runs the AS3 compiler in a mode that
             detects legal but potentially incorrect code-->
        <show-actionscript-warnings>true</show-actionscript-warnings>

        <!-- compiler.source-path: list of path elements that form the roots of
             ActionScript class hierarchies -->
        <source-path>
            <path-element>../src</path-element>
        </source-path>

		<!-- compiler.library-path: list of SWC files or directories that contain SWC files-->
        <library-path>
        	<path-element>../lib</path-element>
        </library-path>
      
        <namespaces>
            <namespace>
                <uri>http://cabin.collab.com</uri>
                <manifest>class-manifest.xml</manifest>
            </namespace>
        </namespaces>

    </compiler>

    <metadata>
        <!-- metadata.creator: A creator's name to store in the SWF metadata-->
        <creator>Collab</creator>

        <!-- metadata.description: The default description to store in the SWC metadata-->
        <description>http://cabin.collab.com</description>

        <!-- metadata.title: The default title to store in the SWF metadata-->
        <title>Cabin</title>
    </metadata>

    <tools-locale>en_GB</tools-locale>

</flex-config>
